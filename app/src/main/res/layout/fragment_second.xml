<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondFragment" >

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/bt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6D3D3"
        android:text="@string/bt_version_string"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        tools:shadowColor="#FFFFFF" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/bt_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6D3D3"
        android:text="@string/bt_wheel_string"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        tools:shadowColor="#FFFFFF" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/bt_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6D3D3"
        android:text="@string/bt_led_srting"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        tools:shadowColor="#FFFFFF" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>